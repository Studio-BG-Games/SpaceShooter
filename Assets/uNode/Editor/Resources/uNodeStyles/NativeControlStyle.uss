ControlView {
    height: 24px;
    align-items: center;
    padding-left: 2px;
    padding-right: 2px;
    flex-direction: row;
}

ControlView.input {
    flex-direction: row;
}

ControlView.output {
    flex-direction: row-reverse;
}

ControlView.output_port {
    flex-direction: row;
	height: 16px;
    padding-left: 0;
	padding-right: 0;
}

Button.MiniDropDown {
    background-image: resource("Builtin Skins/DarkSkin/Images/mini pulldown.png");
}

Button.MiniDropDown:hover {
    background-image: resource("Builtin Skins/DarkSkin/Images/mini pulldown focus.png");
}

Button.MiniDropDown:hover:active {
    background-image: resource("Builtin Skins/DarkSkin/Images/mini pulldown act.png");
}

Toggle > #Checkmark.RadioButton {
    background-image: resource("Builtin Skins/DarkSkin/Images/radio.png");
}

Toggle:hover:active > #Checkmark.RadioButton {
    background-image: resource("Builtin Skins/DarkSkin/Images/radio act.png");
}

Toggle:checked > #Checkmark.RadioButton {
    background-image: resource("Builtin Skins/DarkSkin/Images/radio on.png");
}

Toggle:checked:hover:active > #Checkmark.RadioButton {
    background-image: resource("Builtin Skins/DarkSkin/Images/radio on act.png");
}
Toggle:focus:checked > #Checkmark.RadioButton {
    background-image: resource("Builtin Skins/DarkSkin/Images/radio on.png");
}

Toggle:hover:active:checked > #Checkmark.RadioButton {
    background-image: resource("Builtin Skins/DarkSkin/Images/radio on act.png");
}

ColorField {
    min-width: 80px;
    align-content: center;
}

ColorField > IMGUIContainer {
    width: 0px;
}

MemberControl {
    flex-direction: row;
    align-items: center;
}

ObjectField {
    min-width: 80px;
}

GradientField {
    min-width: 80px;
}

CurveField {
    min-width: 80px;
}

RectField > VisualElement {
    flex-direction: row;
}

RectIntField > VisualElement {
    flex-direction: row;
}

BoundsField > VisualElement {
    flex-direction: row;
}

.port-control > EnumControl {
    flex-grow:1;
}

.port-control > PopupElement {
    margin-bottom:0px;
}

.unity-composite-field__field {
    flex-basis: auto;
}

